    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\",\n  \"preferred_language\": \"en\"\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Registration returns 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "const body = pm.response.json();",
                  "if (body?.id) {",
                  "    pm.collectionVariables.set('user_id', body.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Login returns 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "const body = pm.response.json();",
                  "if (body?.id) {",
                  "    pm.collectionVariables.set('user_id', body.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Current User",
          "request": {
            "method": "GET",
            "header": [{ "key": "X-User-Id", "value": "{{user_id}}" }],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Current user returns 200 when header set\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Rooms",
      "item": [
        {
          "name": "List Rooms",
          "request": {
            "method": "GET",
            "header": [{ "key": "X-User-Id", "value": "{{user_id}}" }],
            "url": {
              "raw": "{{base_url}}/rooms",
              "host": ["{{base_url}}"],
              "path": ["rooms"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Rooms list returns 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Create Room",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "X-User-Id", "value": "{{user_id}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Project Alpha\"\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/rooms",
              "host": ["{{base_url}}"],
              "path": ["rooms"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Room creation returns 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "const body = pm.response.json();",
                  "if (body?.id) {",
                  "    pm.collectionVariables.set('room_id', body.id);",
                  "}",
                  "if (body?.join_code) {",
                  "    pm.collectionVariables.set('room_join_code', body.join_code);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Join Room",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "X-User-Id", "value": "{{user_id}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"join_code\": \"{{room_join_code}}\"\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/rooms/join",
              "host": ["{{base_url}}"],
              "path": ["rooms", "join"]
            }
          }
        },
        {
          "name": "Room Members",
          "request": {
            "method": "GET",
            "header": [{ "key": "X-User-Id", "value": "{{user_id}}" }],
            "url": {
              "raw": "{{base_url}}/rooms/{{room_id}}/members",
              "host": ["{{base_url}}"],
              "path": ["rooms", "{{room_id}}", "members"]
            }
          }
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "List Messages",
          "request": {
            "method": "GET",
            "header": [{ "key": "X-User-Id", "value": "{{user_id}}" }],
            "url": {
              "raw": "{{base_url}}/rooms/{{room_id}}/messages?limit={{message_limit}}&before={{message_before}}",
              "host": ["{{base_url}}"],
              "path": ["rooms", "{{room_id}}", "messages"],
              "query": [
                { "key": "limit", "value": "{{message_limit}}" },
                {
                  "key": "before",
                  "value": "{{message_before}}",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "X-User-Id", "value": "{{user_id}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Hello team!\",\n  \"type\": \"text\"\n}",
              "options": {
                "raw": { "language": "json" }
              }
            },
            "url": {
              "raw": "{{base_url}}/rooms/{{room_id}}/messages",
              "host": ["{{base_url}}"],
              "path": ["rooms", "{{room_id}}", "messages"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Message creation returns 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "const body = pm.response.json();",
                  "if (body?.id) {",
                  "    pm.collectionVariables.set('message_id', body.id);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
